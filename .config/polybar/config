[colors]
background = #111111
background-alt = #444
foreground = #aaa
foreground-alt = #555
primary = #287799
secondary = #cf6060
good = #44cc44
alert = #bd2c40
warn-background = #411
warn-foreground = #fca 
warn-underline = #f00

[bar/right]
monitor = ${env:MONITOR:HDMI-0}
width = 100%
height = 27
radius = 0.0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = ${colors.primary}
border-size = 0
border-color = #00000000
padding-left = 2
padding-right = 0
module-margin-left = 0
module-margin-right = 1
font-0 = dejavusansmono:pixelsize=11;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
bottom = true

modules-left = menu i3
modules-center = cmus
modules-right = xkeyboard comfyui reboot backup backup_interrupted apt ping mail memory cpu temperature volume date time

scroll-up = #i3.prev
scroll-down = #i3.next

[module/sysinfo]
format-margin = 1
format-prefix-foreground = ${colors.foreground-alt}

[bar/left]
inherit = bar/right
monitor = ${env:MONITOR:DVI-D-0}
tray-position = right
tray-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
module-margin-left = 0
pin-workspaces = true
strip-wsnumbers = true

label-mode-padding = 1
label-mode-foreground = ${colors.warn-foreground}
label-mode-underline = ${colors.secondary}
label-mode-background = ${colors.warn-background}

label-focused = %name%
label-focused-background = #111111 
label-focused-foreground = #fff 
label-focused-underline = ${colors.primary}  
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-foreground = #666 
label-unfocused-padding = 1

label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = #444
label-visible-padding = ${self.label-focused-padding}

label-urgent = %name%
label-urgent-background = #411
label-urgent-foreground = #fca 
label-urgent-underline = #f00
label-urgent-padding = 1

[module/cpu]
inherit = module/sysinfo
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
; format-underline = #f90000
label = %percentage%%
margin-right = 1

[module/memory]
inherit = module/sysinfo
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
; format-underline = #4bffdc
label = %percentage_used%%

[module/time]
inherit = module/sysinfo
type = internal/date
interval = 5
time = "%H:%M"
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %time%

[module/date]
inherit = module/sysinfo
type = internal/date
interval = 5
date = " %d.%m"
format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
label = %date% 

[module/temperature]
inherit = module/sysinfo
type = internal/temperature
thermal-zone = 0
warn-temperature = 80
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon2/temp1_input
format = <ramp> <label>
format-foreground = ${colors.foreground-alt}
label-foreground = ${colors.foreground}
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.warn-underline}
label-warn-foreground = ${colors.warn-foreground}
format-warn-background = ${colors.warn-background}
label = %temperature-c%
label-warn = %temperature-c%

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/cmus]
type = custom/script
exec = ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1
click-left = cmus-remote --pause
scroll-down = cmus-remote --next
scroll-up = cmus-remote --prev
label-maxlen = 100

[module/mail]
type = custom/script
exec = ~/.config/polybar/inbox-imap-shellnetrc.sh
interval = 60
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.good}

[module/backup]
type = custom/script
exec-if = test -f "/home/mikeri/.local/share/backup/state"
exec = echo Backup in progress
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label-foreground = #fff
format-underline = ${colors.primary}

[module/backup_interrupted]
type = custom/script
exec-if = test -f "/home/mikeri/.local/share/backup/interrupted"
exec = echo Backup interrupted
click-left = rm /home/mikeri/.local/share/backup/interrupted
interval = 5
format-prefix = " "
format-foreground = ${colors.warn-foreground}
format-background = ${colors.warn-background}
format-underline = ${colors.warn-underline}

[module/reboot]
type = custom/script
exec-if = test -f "/var/run/reboot-required"
exec = echo Reboot required
format-margin = 2
interval = 5
format-prefix = " "
format-suffix = " "
format-prefix-foreground = ${colors.foreground-alt}
label-foreground = ${colors.secondary}
format-underline = ${colors.secondary}

[module/ping]
type = custom/script
exec-if = ! ping -c 1 -w 1 1.1.1.1
exec = echo WAN connection problems
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.warn-foreground}
format-suffix = " "
label-foreground = ${colors.secondary}
format-underline = ${colors.secondary}

[module/menu]
type = custom/text
content = 
content-padding = 0
click-left = jgmenu_run
label-foreground = ${colors.secondary}

[module/apt]
type = custom/script
exec = ~/.config/polybar/apt-updates.sh
interval = 600 
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-suffix = " "
format-underline = ${colors.good}

[module/comfyui]
type = custom/script
exec = ~/.config/polybar/comfyui-queue.py
interval = 60 
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-suffix = " "

; [module/manageengine]
; type = custom/script
; exec = ~/.config/polybar/manageengine.py
; interval = 60 
; format-prefix = " "
; format-suffix = " "
; format-foreground = ${colors.warn-foreground}
; format-background = ${colors.warn-background}
; format-underline = ${colors.warn-underline}

[module/volume]
inherit = module/sysinfo
type = internal/pulseaudio
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.foreground-alt}
format-muted = "mute"
format-muted-foreground = ${colors.foreground-alt}
label = %percentage%%

[module/stocks]
type = custom/script
exec = ~/.config/polybar/stocks.py
tail = true
; format-prefix = " "
; format-suffix = " "
; format-foreground = ${colors.warn-foreground}
; format-background = ${colors.warn-background}
; format-underline = ${colors.warn-underline}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
format = <label-indicator>
format-margin = 2
interval = 5
format-prefix-foreground = ${colors.foreground-alt}
format-foreground = ${colors.warn-foreground}
format-underline = ${colors.secondary}
format-background = ${colors.warn-background}
; vim:ft=dosini
