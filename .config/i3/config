  strip_workspace_numbers yes
  # font  -*-gohufont-medium-r-*-*-12-*-*-*-*-*-iso10646-1
  font pango:gohufont
#  font  -*-aqoui-bold-r-*-*-15-*-*-*-*-*-iso10646-1
 status_command py3status
  # status_command i3status
#  status_command ~/.config/i3status/wrapper.sh
  colors {
        background #111111
        statusline #888888
        separator  #333333
        focused_workspace  #111111 #285577 #ffffff 
        active_workspace   #111111 #444444 #ffffff 
        inactive_workspace #111111 #333333 #888888 
        urgent_workspace   #111111 #904040 #ffffff 

    }
# Change this according to driver
