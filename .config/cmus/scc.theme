# default text color
set color_win_fg=246

# overall background color
set color_win_bg=default

# command-line colors
set color_cmdline_bg=default
set color_cmdline_fg=default
set color_error=124
set color_info=172
set color_separator=236

# bottom status line
set color_statusline_bg=235
set color_statusline_fg=245

# bottom title line
set color_titleline_bg=236
set color_titleline_fg=229

# top title area
set color_win_title_bg=236
set color_win_title_fg=252
##### playing file colors ######################################################
# unselected currently playing track's text
set color_win_cur=184
set color_win_cur=184
